[build-system]
requires = ["hatchling"]
build-backend = "hatchling.build"

[project]
name = "{{ package_name }}"
version = "0.1.0"
authors = [
  { name="{{ org_name }}", email="info@openg2p.org" },
]
description = "{{ repo_description }}"
readme = "README.md"
requires-python = ">=3.7"
classifiers = [
  "Programming Language :: Python :: 3",
  "License :: OSI Approved :: Mozilla Public License 2.0 (MPL 2.0)",
  "Operating System :: OS Independent",
]
dependencies=[
  "openg2p-fastapi-common ~=1.0",
  "openg2p-fastapi-auth ~=1.0",
]

[project.urls]
Homepage = "https://openg2p.org"
Documentation = "https://docs.openg2p.org/"
Repository = "{{ https://github.com/{{ org_slug }}/{{ repo_slug }} }}"
Source = "{{ https://github.com/{{ org_slug }}/{{ repo_slug }} }}"
